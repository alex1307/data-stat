###
POST https://localhost:3000/charts-data
Content-Type: application/json
Accept: application/json

{
    "make": "Audi",
    "engine": [
        "Petrol"
    ],
    "priceTo": 100000,
    "group": [
        "make",
        "year"
    ],
    "aggregators": [
        "count",
        "avg"
    ],
    "order": [
        {
            "column": "count",
            "asc": true
        }
        
    ],
    "stat_column": "price_in_eur"
}


